{
  "name": "fanclub-ui",
  "version": "1.0.0",
  "description": "Front-end of web for fan-club",
  "engines": {
    "node": "^12.15.0"
  },
  "engineStrict": true,
  "private": true,
  "scripts": {
    "dev": "npm-run-all -s clean:cache serve",
    "serve": "nuxt-ts",
    "build": "rm -rf .nuxt dist && npm-run-all -p build:*",
    "build:app": "nuxt-ts build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "nuxt-ts start",
    "generate": "nuxt-ts generate",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:stylelint": "stylelint './**/*.{scss,vue}' --fix",
    "clean:cache": "rm -rf node_modules/.cache/hard-source/",
    "test": "jest",
    "sls": "sls",
    "sls:offline": "cross-env NODE_ENV=production sls offline start"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@egjs/flicking-plugins": "^3.2.0",
    "@egjs/vue-flicking": "^3.2.1",
    "@nuxt/types": "^2.13.3",
    "@nuxt/typescript-build": "^2.0.0",
    "@nuxt/typescript-runtime": "^1.0.0",
    "@nuxtjs/axios": "^5.11.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/gtm": "^2.3.0",
    "@nuxtjs/sentry": "^4.1.3",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@vue/composition-api": "^0.6.7",
    "aws-serverless-express": "^3.3.8",
    "camelcase-keys": "^6.2.2",
    "fibers": "^5.0.0",
    "nuxt": "^2.13.3",
    "nuxt-webfontloader": "^1.1.0",
    "sanitize.css": "^11.0.1",
    "sass": "^1.26.10",
    "snakecase-keys": "^3.2.0",
    "source-map-support": "^0.5.19",
    "vue-lazyload": "^1.3.3",
    "vuex-module-decorators": "^0.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@types/fibers": "^3.1.0",
    "@types/jest": "^26.0.4",
    "@types/sass": "^1.16.0",
    "@types/webfontloader": "^1.6.32",
    "@vue/test-utils": "^1.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": ">=1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "ts-jest": "^26.1.1",
    "vue-jest": "^3.0.6"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1",
      "^~/(.*)$": "<rootDir>/app/$1",
      "^@components/(.*)$": "<rootDir>/app/components/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue",
      "json"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/**/*.vue"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "extends": [
      "@nuxtjs",
      "@nuxtjs/eslint-config-typescript",
      "prettier",
      "prettier/vue",
      "plugin:prettier/recommended",
      "plugin:nuxt/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "vue/no-v-html": 0
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "extends": [
      "stylelint-config-rational-order",
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ],
    "rules": {
      "plugin/declaration-block-no-ignored-properties": true
    }
  }
}
